        app:layout_constraintBottom_toTopOf="@+id/chargeData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/afrData"
        app:layout_constraintTop_toBottomOf="@+id/tpsData"
        guage:dividerSize="1" />

