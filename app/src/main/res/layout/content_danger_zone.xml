        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tpsData"
        app:layout_constraintEnd_toEndOf="@+id/tpsData"
        app:layout_constraintStart_toStartOf="@+id/tpsData"
        app:layout_constraintTop_toTopOf="@+id/tpsData" />

