        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/voltageData"
        app:layout_constraintEnd_toEndOf="@+id/voltageData"
        app:layout_constraintStart_toStartOf="@+id/voltageData"
        app:layout_constraintTop_toBottomOf="@+id/voltageText"
        app:layout_constraintVertical_bias="0.0" />

    <pl.pawelkleczkowski.customgauge.CustomGauge
        android:id="@+id/tpsData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:gaugeEndValue="100"
        app:gaugePointEndColor="#0000ff"
        app:gaugePointStartColor="#0000ff"
        app:gaugeStartAngle="180"
        app:gaugeStartValue="0"
        app:gaugeStrokeCap="ROUND"
        app:gaugeStrokeWidth="10dp"
        app:gaugeSweepAngle="180"
        app:layout_constraintBottom_toTopOf="@+id/fuelData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/coolantData"
        app:layout_constraintTop_toTopOf="parent"
        guage:dividerSize="1" />

    <TextView
        android:id="@+id/tpsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
